<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/page_bg_level_one"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/bottom_unit_1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_bg"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/bottom_img_1"
                android:layout_width="@dimen/list_item_bottom_icon_size"
                android:layout_height="@dimen/list_item_bottom_icon_size"
                android:visibility="gone"
                android:src="@drawable/self_note_label_icon" />

            <TextView
                android:id="@+id/bottom_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/unit_margin_level_three"
                android:text="转发"
                android:textColor="@color/text_color_level_three"
                android:textSize="@dimen/text_btn_level_fifth" />
        </LinearLayout>

        <ImageView
            android:id="@+id/bottom_split_1"
            android:visibility="gone"
            style="@style/split_line_vetical_view" />

        <LinearLayout
            android:id="@+id/bottom_unit_2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_bg"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/bottom_img_2"
                android:layout_width="@dimen/list_item_bottom_icon_size"
                android:layout_height="@dimen/list_item_bottom_icon_size"
                android:visibility="gone"
                android:src="@drawable/self_note_label_icon" />

            <TextView
                android:id="@+id/bottom_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/unit_margin_level_three"
                android:text="关注"
                android:textColor="@color/text_color_level_three"
                android:textSize="@dimen/text_btn_level_fifth" />
        </LinearLayout>

        <ImageView
            android:id="@+id/bottom_split_2"
            android:visibility="gone"
            style="@style/split_line_vetical_view" />

        <LinearLayout
            android:id="@+id/bottom_unit_3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_bg"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/bottom_img_3"
                android:layout_width="@dimen/list_item_bottom_icon_size"
                android:visibility="gone"
                android:layout_height="@dimen/list_item_bottom_icon_size"
                android:src="@drawable/self_note_label_icon" />

            <TextView
                android:id="@+id/bottom_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/unit_margin_level_three"
                android:text="查看"
                android:textColor="@color/text_color_level_three"
                android:textSize="@dimen/text_btn_level_fifth" />
        </LinearLayout>

        <ImageView
            android:id="@+id/bottom_split_3"
            android:visibility="gone"
            style="@style/split_line_vetical_view" />

        <LinearLayout
            android:id="@+id/bottom_unit_4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_bg"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/bottom_img_4"
                android:layout_width="@dimen/list_item_bottom_icon_size"
                android:layout_height="@dimen/list_item_bottom_icon_size"
                android:visibility="gone"
                android:src="@drawable/self_note_label_icon" />

            <TextView
                 android:id="@+id/bottom_text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/unit_margin_level_three"
                android:text="删除"
                android:textColor="@color/text_color_level_three"
                android:textSize="@dimen/text_btn_level_fifth" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/split_line_view" />

</LinearLayout>
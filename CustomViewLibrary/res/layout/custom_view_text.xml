<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <ProgressBar
            android:id="@+id/progressBar_left"
            style="@style/progress_default_load_img_style" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/unit_margin_level_two"
            android:textColor="@color/text_color_level_two"
            android:textSize="@dimen/text_btn_level_three"
            android:text="加载中..." >
        </TextView>

        <ProgressBar
            android:id="@+id/progressBar_right"
            android:layout_marginLeft="@dimen/unit_margin_level_two"
            style="@style/progress_default_load_img_style" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg_level_one"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/app_word"
        android:layout_width="@dimen/app_start_word_size"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
       />

    <ImageView
        android:layout_width="@dimen/app_start_icon_size"
        android:layout_height="@dimen/app_start_icon_size"
        android:layout_above="@id/app_word"
        android:layout_centerHorizontal="true"
          android:src="@drawable/app_page_icon"
       />

    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/unit_margin_level_big" >

        <ImageView
            android:id="@+id/actionBtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
           android:src="@drawable/app_bottom_name" />
        <ImageView
            android:id="@+id/progressBar"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/actionBtn"
           android:layout_marginTop="@dimen/unit_margin_level_three"
           android:src="@drawable/app_bottom_text"
             />
    </RelativeLayout>

</RelativeLayout>